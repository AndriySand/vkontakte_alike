<div class="page-header">
  <h1>User</h1>
</div>

<dl class="dl-horizontal col-lg-6 col-md-6">
  <dt><strong>Name:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>
<%= render partial: 'shared/follower_links' if signed_in? %>

<div class="col-lg-12 col-md-12"><h1>Articles</h1></div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @articles %> </br>
